{
  "compilerOptions": {
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["esnext"],
    "noEmit": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "build",
    "removeComments": false,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": false
  },
  "exclude": ["./build", "./cjs", "./esm", "./node_modules", "./types"],
  "extends": "./tsconfig.json",
  "files": [],
  "include": ["src"]
}
