{
  "compilerOptions": {
    "declaration": true,
    "inlineSourceMap": true,
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "build",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "removeComments": false,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": false
  },
  "exclude": ["./build", "./cjs", "./esm", "./node_modules", "./types"],
  "extends": "./tsconfig.json",
  "files": [],
  "include": ["src"]
}
