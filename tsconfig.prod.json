{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmit": false,
    "outDir": "./dist",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "removeComments": false,
    "rootDir": "./src",
    "sourceMap": true
  },
  "exclude": ["**/__mocks__/**", "**/__tests__/**"],
  "extends": "./tsconfig.json",
  "include": ["src"]
}
