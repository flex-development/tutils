{
  "name": "@flex-development/tutils",
  "description": "TypeScript utilities",
  "version": "3.1.0",
  "keywords": [
    "type definitons",
    "typescript utilities",
    "typescript"
  ],
  "homepage": "https://github.com/flex-development/tutils",
  "repository": "git://github.com/flex-development/tutils.git",
  "bugs": {
    "url": "https://github.com/flex-development/tutils/issues",
    "email": "developers@flexdevelopment.llc"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "Lexus Drumgold",
    "email": "lex@flexdevlopment.llc",
    "url": "https://flexdevelopment.llc"
  },
  "publishConfig": {
    "directory": "./"
  },
  "files": [
    "cjs",
    "esm",
    "CHANGELOG.md"
  ],
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "clean": "rimraf node_modules",
    "postinstall": "is-ci || husky-run install",
    "check:format": "prettier --check .",
    "check:install": "yarn dlx @yarnpkg/doctor .",
    "check:style": "eslint . --ext md,js,ts",
    "fix:format": "prettier --write .",
    "fix:style": "yarn check:style --fix --cache",
    "build": "ts-node ./scripts/build",
    "prepack": "dotenv -c production -- yarn build",
    "release": "dotenv -c production -- ts-node ./scripts/release"
  },
  "devDependencies": {
    "@babel/core": "7.15.4",
    "@babel/eslint-parser": "7.15.4",
    "@commitlint/cli": "13.0.0",
    "@commitlint/config-conventional": "13.0.0",
    "@commitlint/format": "13.0.0",
    "@flex-development/grease": "1.1.0",
    "@types/debug": "latest",
    "@types/mvdan-sh": "0.5.0",
    "@types/node": "16.7.10",
    "@types/yargs": "17.0.2",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "@zerollup/ts-transform-paths": "1.7.18",
    "copyfiles": "2.4.1",
    "debug": "latest",
    "dotenv-cli": "4.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsdoc": "36.0.8",
    "eslint-plugin-markdown": "2.2.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-spellcheck": "0.0.19",
    "fs-extra": "10.0.0",
    "husky": "4.3.8",
    "is-ci": "3.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2",
    "prettier-plugin-sh": "0.7.0",
    "replace-in-file": "6.2.0",
    "rimraf": "3.0.2",
    "ts-node": "10.2.1",
    "ttypescript": "1.5.12",
    "typescript": "4.4.2"
  },
  "peerDependencies": {
    "chalk": "4.1.1",
    "lodash": "4.17.21",
    "read-pkg": "5.2.0",
    "shelljs": "0.8.4",
    "typescript": "*",
    "yargs": "17.1.1"
  },
  "peerDependenciesMeta": {
    "chalk": {
      "optional": true
    },
    "lodash": {
      "optional": true
    },
    "read-pkg": {
      "optional": true
    },
    "shelljs": {
      "optional": true
    },
    "yargs": {
      "optional": true
    }
  },
  "resolutions": {
    "read-pkg": "5.2.0"
  },
  "engines": {
    "node": ">=15.0.0",
    "npm": "use-yarn",
    "yarn": "3.0.1"
  },
  "env": {
    "optional": [
      "DEBUG",
      "DEBUG_COLORS"
    ],
    "required": [
      "NPM_TOKEN_FLDV",
      "PAT_GPR_FLDV"
    ]
  },
  "packageManager": "yarn@3.0.1"
}
