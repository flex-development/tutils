{
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "dprint.path": "./node_modules/dprint/dprint",
  "eslint.enable": true,
  "eslint.options": {
    "extensions": ["cjs", "md", "ts"],
    "overrideConfigFile": "./.eslintrc.cjs"
  },
  "eslint.packageManager": "yarn",
  "eslint.validate": ["javascript", "markdown", "typescript"],
  "files.associations": {
    ".env*": "shellscript",
    ".markdownlintignore": "ignore",
    "commit-msg": "shellscript",
    "pre-commit": "shellscript",
    "pre-push": "shellscript"
  },
  "markdownlint.ignore": "./.markdownlintignore",
  "prettier.enable": false,
  "shellformat.flag": "-ci -fn -i=2 -sr",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "vsicons.associations.files": [
    {
      "extensions": [".commitlintrc.ts"],
      "format": "svg",
      "icon": "commitlint"
    },
    {
      "extensions": [
        ".eslintrc.base.cjs",
        ".eslintrc.spec.cjs",
        ".eslintrc.spellcheck.cjs"
      ],
      "format": "svg",
      "icon": "eslint"
    },
    {
      "extensions": [".lintstagedrc.cjs"],
      "format": "svg",
      "icon": "lintstagedrc"
    },
    {
      "extensions": [".markdownlint.cjs", ".markdownlintignore"],
      "format": "svg",
      "icon": "markdownlint"
    },
    {
      "extensions": ["prod.cjs.json", "prod.esm.json", "prod.types.json"],
      "format": "svg",
      "icon": "tsconfig"
    },
    {
      "extensions": ["yarnrc.yml"],
      "format": "svg",
      "icon": "yarn"
    }
  ],
  "vsicons.associations.folders": [
    {
      "extensions": ["__doubles__"],
      "format": "svg",
      "icon": "mock"
    },
    {
      "extensions": ["__fixtures__"],
      "format": "svg",
      "icon": "db"
    },
    {
      "extensions": ["types"],
      "format": "svg",
      "icon": "typings"
    }
  ],
  "yaml.format.bracketSpacing": true,
  "yaml.format.enable": true,
  "yaml.format.printWidth": 80,
  "yaml.format.proseWrap": "always",
  "yaml.format.singleQuote": true
}
