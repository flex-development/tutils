{
  "arrowParens": "avoid",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "jsxSingleQuote": true,
  "printWidth": 80,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "overrides": [
    {
      "files": [
        "*.sh",
        "*.txt",
        ".editorconfig",
        ".env*",
        ".gitconfig",
        ".husky/commit-msg",
        ".husky/pre-commit",
        ".husky/pre-push"
      ],
      "options": {
        "functionNextLine": true,
        "indent": 2,
        "keepComments": true,
        "keepPadding": false,
        "parser": "sh",
        "spaceRedirects": true,
        "switchCaseIndent": true,
        "variant": 0
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "printWidth": 100
      }
    }
  ]
}
